@import "/assets/iconfont/iconfont.wxss";

.image-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
  padding: 12rpx;
}

.card-image-container {
  width: 100%;
  padding-bottom: 100%; /* 保持1:1的宽高比 */
  position: relative;
  overflow: hidden;
  border-radius: 8rpx;
}

.card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-info {
  padding: 16rpx 8rpx 8rpx;
  background: #fff;
}

.title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.journal {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 6rpx;
}

.color-dots {
  display: flex;
  gap: 6rpx;
  align-items: center;
}

.color-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  background-color: #f5f5f5;
}

.action {
  display: flex;
  align-items: center;
  padding: 6rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.action .iconfont {
  font-size: 32rpx;
  color: #999;
}

.action .icon-heart.liked {
  color: #ff4d4f;
} 