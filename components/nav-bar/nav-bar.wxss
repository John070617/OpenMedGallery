.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  z-index: 999;
}

.nav-bar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
} 