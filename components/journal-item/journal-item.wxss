.journal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.journal-info {
  flex: 1;
  margin-right: 20rpx;
}

.journal-name {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.journal-url {
  font-size: 24rpx;
  color: #666;
}

.actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 28rpx;
}