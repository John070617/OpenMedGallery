.container {
  padding: 30rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.stat-item {
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1296db;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.tags {
  white-space: nowrap;
  padding: 20rpx 0;
  margin: 0 -30rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}

.tag {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.tag.active {
  color: #fff;
  background: #1296db;
}

.favorites-list {
  margin-top: 30rpx;
}

.waterfall {
  display: flex;
  justify-content: space-between;
}

.waterfall-column {
  width: 48%;
}

.empty-tip {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  background: #fff;
  border-radius: 12rpx;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.explore-btn {
  margin-top: 30rpx;
  width: 200rpx;
  font-size: 28rpx;
  color: #fff;
  background: #1296db;
  border-radius: 30rpx;
}