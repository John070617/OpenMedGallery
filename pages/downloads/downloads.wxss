.container {

  padding: 20rpx;

}



.stats {

  display: flex;

  justify-content: space-around;

  background: #fff;

  padding: 30rpx;

  border-radius: 12rpx;

  margin: 20rpx 0;

}



.stat-item {

  text-align: center;

}



.stat-num {

  display: block;

  font-size: 36rpx;

  font-weight: bold;

  color: #1296db;

}



.stat-label {

  font-size: 24rpx;

  color: #666;

}



.actions {

  display: flex;

  gap: 20rpx;

  margin: 30rpx 0;

}



.action-btn {

  flex: 1;

  font-size: 28rpx;

  background: #fff;

}



.download-list {

  background: #fff;

  border-radius: 12rpx;

  padding: 20rpx;

}



.download-item {

  display: flex;

  align-items: center;

  padding: 20rpx;

  border-bottom: 1rpx solid #f0f0f0;

}



.thumbnail {

  width: 120rpx;

  height: 120rpx;

  border-radius: 8rpx;

  margin-right: 20rpx;

}



.info {

  flex: 1;

  margin-right: 20rpx;

}



.title {

  font-size: 28rpx;

  margin-bottom: 8rpx;

}



.meta {

  font-size: 24rpx;

  color: #666;

  margin-bottom: 8rpx;

}



.date {

  margin-left: 20rpx;

}



.size {

  font-size: 24rpx;

  color: #999;

}



.item-actions {

  display: flex;

  flex-direction: column;

  justify-content: space-around;

  padding-left: 20rpx;

}



.action-icon {

  width: 48rpx;

  height: 48rpx;

  line-height: 48rpx;

  text-align: center;

  border-radius: 24rpx;

  font-size: 32rpx;

}



.redownload {

  color: #1296db;

  border: 2rpx solid #1296db;

}



.delete {

  color: #ff4d4f;

  border: 2rpx solid #ff4d4f;

}



.empty-tip {

  padding: 60rpx 0;

  text-align: center;

  color: #999;

  font-size: 28rpx;

}



.empty-tip image {

  width: 200rpx;

  height: 200rpx;

  margin-bottom: 20rpx;

}



.downloads-list {

  background: #fff;

  border-radius: 12rpx;

} 